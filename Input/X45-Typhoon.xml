 <button n="14">
  <desc>Autopilot Altitude decrease</desc>
 <repeatable type="bool">true</repeatable>
 <binding>
  <condition>
   <equals>
    <property>/systems/autopilot/locks/altitude</property>
    <value>altitude-hold</value>
   </equals>
  </condition>
   <command>property-adjust</command>
   <property>/systems/autopilot/settings/target-altitude-ft</property>
   <step type="double">-50</step>
   <min>500</min>
   <max>60000</max>
   <squared type="bool">false</squared>
  </binding>
  <binding>
  <condition>
   <equals>
    <property>/systems/autopilot/locks/altitude</property>
    <value>agl-hold</value>
   </equals>
  </condition>
   <command>property-adjust</command>
   <property>/systems/autopilot/settings/target-altitude-agl-ft</property>
   <step type="double">-10</step>
   <min>50</min>
   <max>1000</max>
   <squared type="bool">false</squared>
  </binding>
 </button>
 
 <button n="15">
  <desc>Autopilot Heading increase</desc>
 <repeatable type="bool">true</repeatable>
 <binding>
